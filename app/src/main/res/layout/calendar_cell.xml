<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="@drawable/calendar_cell_border">

    <include
        android:id="@+id/circleTop"
        layout="@layout/calendar_circle_fill"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/txtDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="@string/strVs"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/calendarCellList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/txtDay"/>

</RelativeLayout>