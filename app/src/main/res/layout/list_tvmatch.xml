<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgHomeTeam"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtTop"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/txtHomeTeam"
        android:layout_toLeftOf="@+id/txtHomeTeam"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/txtHomeTeam"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/txtTop"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@+id/textVs"
        android:layout_toLeftOf="@+id/textVs"


        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@+id/imgHomeTeam"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTop"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/textVs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/strVs"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgAwayTeam"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtTop"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/textVs"
        android:layout_toRightOf="@+id/textVs"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/txtAwayTeam"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/txtTop"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/imgAwayTeam"
        android:layout_toRightOf="@+id/imgAwayTeam"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        app:fontFamily="sans-serif-condensed" />

    <TextView
        android:id="@+id/txtBottom"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/txtTop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="0dp"

        android:layout_marginRight="0dp"
        android:gravity="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>